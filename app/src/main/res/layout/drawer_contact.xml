<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/contact_phone_container"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/contact_button_background">
            <ImageView
                android:layout_width="@dimen/button_default"
                android:layout_height="@dimen/button_default"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_phone_grey_dark"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contact_mail_container"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/contact_button_background">
            <ImageView
                android:layout_width="@dimen/button_default"
                android:layout_height="@dimen/button_default"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_mail_grey_dark"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/contact_www_container"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/contact_button_background">
            <ImageView
                android:layout_width="@dimen/button_default"
                android:layout_height="@dimen/button_default"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_www_grey_dark" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>