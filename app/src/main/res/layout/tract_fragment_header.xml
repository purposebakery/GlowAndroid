<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pallet_fg" >

    <RelativeLayout
        android:id="@+id/more_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/more_icon"
            android:layout_width="@dimen/button_default_small"
            android:layout_height="@dimen/button_default_small"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_more_white" />

        <TextView
            android:id="@+id/more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/more_icon"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/nav_more"
            android:textColor="@color/text"
            android:textSize="12sp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/share_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_toLeftOf="@id/more_container"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="@dimen/button_default_small"
            android:layout_height="@dimen/button_default_small"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_share_white" />

        <TextView
            android:id="@+id/share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/share_icon"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/nav_share"
            android:textColor="@color/text"
            android:textSize="12sp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contact_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_toLeftOf="@id/share_container"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/contact_icon"
            android:layout_width="@dimen/button_default_small"
            android:layout_height="@dimen/button_default_small"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_comments_white" />

        <TextView
            android:id="@+id/contact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_icon"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/nav_contact"
            android:textColor="@color/text"
            android:textSize="12sp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/header_logo"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:src="@drawable/glow_logo_horizontal_small" />

</RelativeLayout>