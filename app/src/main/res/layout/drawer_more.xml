<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/more_newsletter_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_default_small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/button_default"
            android:layout_height="@dimen/button_default"
            android:src="@drawable/icon_news2_black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/more_dialog_newsletter"
            android:textSize="14sp"
            android:textColor="@color/text_inverted"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/more_shop_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_default_small"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/button_default"
            android:layout_height="@dimen/button_default"
            android:src="@drawable/icon_shop2_black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/more_dialog_shop"
            android:textSize="14sp"
            android:textColor="@color/text_inverted" />
    </LinearLayout>


</LinearLayout>