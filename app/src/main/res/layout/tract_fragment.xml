<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pallet_passive" >

    <ScrollView
        android:id="@+id/activity_glow_pamphlet_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#33000000"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/activity_glow_pamphlet_list_image"
                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_launcher"/>

                <TextView
                    android:id="@+id/activity_glow_pamphlet_list_title"
                    android:text="TITLE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="8dp"
                    android:gravity="center_vertical"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text"/>

            </LinearLayout>

            <TextView
                android:id="@+id/activity_glow_pamphlet_list_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="16sp"
                android:text="Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text"
                android:textColor="@color/text" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_margin="2dp"
                android:background="#33000000">

                <TextView
                    android:id="@+id/activity_glow_pamphlet_list_additional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Additional"
                    android:textColor="@color/text"/>

            </FrameLayout>


        </LinearLayout>
    </ScrollView>



</RelativeLayout>