<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:id="@+id/root">

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        layout="@layout/glow_menu"
        android:background="@color/black" />

    <fragment
        android:id="@+id/selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:name="com.techlung.android.glow.ui.SelectionFlowFragment"
        tools:layout="@layout/selection_flow_fragment">
    </fragment>

    <fragment
        android:id="@+id/tract"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:name="com.techlung.android.glow.ui.TractFragment"
        tools:layout="@layout/tract_fragment">
    </fragment>
</RelativeLayout>
