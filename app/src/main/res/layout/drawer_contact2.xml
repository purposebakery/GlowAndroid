<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/pallet_main">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/contact_phone_container"
            android:layout_width="@dimen/button_default"
            android:layout_height="@dimen/button_default"
            android:src="@drawable/icon_phone2_black" />


        <ImageView
            android:id="@+id/contact_mail_container"
            android:layout_width="@dimen/button_default"
            android:layout_height="@dimen/button_default"
            android:layout_marginLeft="18dp"
            android:src="@drawable/icon_mail_black"/>


        <ImageView
            android:id="@+id/contact_www_container"
            android:layout_width="@dimen/button_default"
            android:layout_height="@dimen/button_default"
            android:layout_marginLeft="18dp"
            android:src="@drawable/icon_www2_black" />

    </LinearLayout>

</LinearLayout>