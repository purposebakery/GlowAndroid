<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="370dp"
    android:background="@drawable/contact_dialog_bg" >

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/pallet_fg"
        android:gravity="center"
        android:text="@string/dialog_button"
        android:textStyle="bold"
        android:textColor="@color/text_inverted"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/pallet_fg"
        android:gravity="center"
        android:text="@string/contact_dialog_title"
        android:textColor="@color/text_inverted"
        android:textSize="16dp"
        android:textStyle="bold"
        android:elevation="4dp" />

    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/button"
        android:layout_below="@id/title"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:background="@color/pallet_passive" >

        <LinearLayout
            android:id="@+id/contact_phone_container"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/button_default"
                android:layout_height="@dimen/button_default"
                android:src="@drawable/icon_phone_white" />

            <TextView
                android:id="@+id/contact_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="13sp" 
                android:textColor="@color/text" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/contact_mail_container"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" 
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="@dimen/button_default"
                android:layout_height="@dimen/button_default"
                android:src="@drawable/icon_mail_white" />

            <TextView
                android:id="@+id/contact_mail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="13sp" 
                android:textColor="@color/text"/>
        </LinearLayout>
        
        
        <LinearLayout
            android:id="@+id/contact_www_container"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" 
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="@dimen/button_default"
                android:layout_height="@dimen/button_default"
                android:src="@drawable/icon_www_white" />

            <TextView
                android:id="@+id/contact_www"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="13sp" 
                android:textColor="@color/text" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>